<RecommendationsScreen>:
    canvas.before:
        Color:
            rgba: (0.98, 0.99, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [0, 0, 0, 0]

        NavBar:

        BoxLayout:
            orientation: 'vertical'
            padding: [40, 20, 40, 40]
            spacing: 20
            ModernCard:
                orientation: 'vertical'
                size_hint_y: 0.8
                ModernLabel:
                    text: "Irrigation Recommendation"
                    font_size: 28
                    bold: True
                    color: (0.1, 0.2, 0.3, 1)
                    size_hint_y: None
                    height: 50
                ModernLabel:
                    id: recommendation_label
                    text: "Recommendation will appear here."
                    font_size: 18
                    color: (0.2, 0.3, 0.4, 1)
                    halign: 'center'
                    size_hint_y: None
                    height: 60
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: 0.2
                spacing: 10
                ModernButton:
                    text: "Back to Soil Moisture"
                    background_color: (0.2, 0.6, 0.2, 1)
                    color: (1, 1, 1, 1)
                    font_size: 16
                    on_press: app.root.current = 'soil_moisture' 